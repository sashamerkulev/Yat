<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_rownumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/textview_translated_text"
        android:textColor="@color/color_number"
        />

    <TextView
        android:id="@+id/textview_translated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview_rownumber"
        android:textSize="16sp"
        android:textColor="@color/color_translated_text"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview_rownumber"
        android:layout_below="@+id/textview_translated_text"
        android:textSize="16sp"
        android:textColor="@color/color_description"
        android:layout_marginLeft="4dp"
        />

</RelativeLayout>